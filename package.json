{
  "name": "troy_chryssos_homesite",
  "version": "3.1.1",
  "description": "The homepage for Troy Chryssos",
  "main": "app.js",
  "repository": "",
  "author": "<troychryssos@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "dev": "next dev",
    "build": "yarn lint:prune && next build",
    "build:serve": "yarn build && yarn next start -p 3003",
    "lint": "next lint",
    "prepare": "husky install",
    "lint:prune": "! ts-prune -i src/pages/* | grep -v -e 'used in module' -e src/pages"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "lodash.debounce": "^4.0.8",
    "next": "12.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@emotion/babel-plugin": "^11.2.0",
    "@emotion/eslint-plugin": "^11.2.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "babel-loader": "^8.1.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-next": "^13.3.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "file-loader": "^6.2.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "ts-prune": "^0.10.1",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
